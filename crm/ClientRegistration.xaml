<Window x:Class="crm.ClientRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crm"
        mc:Ignorable="d"
        Title="Реєстрація клієнта" Height="570" Width="350"
        WindowStartupLocation="CenterScreen" Icon="img/user.ico" ResizeMode="NoResize">

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">

            <Label Content="ПІБ:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="FullNameTextBox" Height="25" HorizontalAlignment="Stretch" Margin="0,5"/>

            <Label Content="Дата народження:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="DateOfBirthTextBox" Height="25" HorizontalAlignment="Stretch" Margin="0,5"/>

            <Label Content="Телефон:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="PhoneNumberTextBox" Height="25" HorizontalAlignment="Stretch" Margin="0,5"/>

            <Label Content="Остання оплата:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="LastPaymentDateTextBox" Height="25" HorizontalAlignment="Stretch" Margin="0,5"/>

            <Label Content="Кінець підписки:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="SubscriptionEndDateTextBox" Height="25" HorizontalAlignment="Stretch" Margin="0,5"/>

            <Label Content="Баланс:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="BalanceTextBox" Height="25" HorizontalAlignment="Stretch" Margin="0,5"/>

            <Label Content="Коментар:" VerticalAlignment="Center" Height="25" HorizontalAlignment="Stretch"/>
            <TextBox Name="CommentTextBox" Height="75" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" Margin="0,5"/>

            <StackPanel HorizontalAlignment="Center" Margin="5">
                <Button Name="RegisterButton" Content="Зареєструвати" Width="120" Height="30" HorizontalAlignment="Center" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
