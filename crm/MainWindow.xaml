<Window x:Class="GymCRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GymCRM" Height="800" Width="1200">
    <Grid>
        <Grid Margin="10" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Новий клієнт" Height="40" Click="Button_Registration" />
            <Button Grid.Column="1" Content="Панель адміністратора" Height="40" Click="AdminPanelButton_Click" />

            <TextBox x:Name="SearchTextBox" Grid.Column="2" Width="200" VerticalAlignment="Center" Margin="10,0" 
                     ToolTip="Введіть текст для пошуку" />


            <Button Grid.Column="3" Width="120" VerticalAlignment="Center" Margin="5,0"
                    Content="Пошук" ToolTip="Натисніть, щоб знайти клієнта" Click="Search"/>
            <Button Grid.Column="4" Content="Статистика" Height="40" Click="Statistics" />
            <Button Grid.Column="5" Content="Оновити дані" Height="40" Click="UpdateList"/>
            <Button Grid.Column="6" Content="Вийти" Height="40" Click="Exit"/>
        </Grid>

        <DataGrid x:Name="ClientsDataGrid" Margin="10,60,10,300" 
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionChanged="ClientsDataGrid_SelectionChanged">
        </DataGrid>

        <Grid Margin="10" VerticalAlignment="Bottom" Height="250">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBox x:Name="FullNameTextBox" Margin="5" ToolTip="ПІБ" />
                <TextBox x:Name="DateOfBirthTextBox" Margin="5" ToolTip="Дата народження" />
                <TextBox x:Name="PhoneNumberTextBox" Margin="5" ToolTip="Номер телефону" />
                <TextBox x:Name="LastPaymentTextBox" Margin="5" ToolTip="Останній платіж" />
                <TextBox x:Name="SubscriptionEndTextBox" Margin="5" ToolTip="Закінчення підписки" />
                <TextBox x:Name="CreationDateTextBox" Margin="5" ToolTip="Дата створення" />
                <TextBox x:Name="BalanceTextBox" Margin="5" ToolTip="Баланс" />
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBox x:Name="CommentTextBox" Margin="5" Height="100" TextWrapping="Wrap" AcceptsReturn="True" ToolTip="Коментар" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Content="Зберегти зміни" Width="150" Margin="5" Height="40" Click="Save"/>
                    <Button Content="Видалити клієнта" Width="150" Margin="5" Height="40" Click="Delete" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
