<Window x:Class="crm.FinancialOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crm"
        mc:Ignorable="d"
        Title="Фінансові операції" Height="150" Width="250">
    <Grid Margin="10">
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="25" Margin="0,0,0,15" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Поповнення" Width="80" Height="30" Margin="5"/>
            <Button Content="Зняття" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
