<Window x:Class="crm.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crm"
        mc:Ignorable="d"
        Title="Statistics" Height="250" Width="300" ResizeMode="NoResize" Icon="img/statistics.ico">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Статистика клієнтів" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Загальна кількість клієнтів:" VerticalAlignment="Center" Width="180"/>
                <TextBlock Name="TotalClients" VerticalAlignment="Center" Width="100" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Загальний баланс усіх клієнтів:" VerticalAlignment="Center" Width="180"/>
                <TextBlock Name="TotalBalance" VerticalAlignment="Center" Width="100" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Середній баланс клієнтів:" VerticalAlignment="Center" Width="180"/>
                <TextBlock Name="AverageBalance" VerticalAlignment="Center" Width="100" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Кількість клієнтів з 0,0 балансом:" VerticalAlignment="Center" Width="180"/>
                <TextBlock Name="ZeroBalanceCount" VerticalAlignment="Center" Width="100" />
            </StackPanel>

            <Button Content="Завантажити статистику" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
