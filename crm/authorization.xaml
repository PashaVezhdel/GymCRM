<Window x:Class="GymCRM.authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GymCRM" Height="300" Width="300" Background="#F0F4F8"
        ResizeMode="NoResize">
    <Grid>
        <Border Background="#D3D3D3" CornerRadius="10" Margin="10">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="GymCRM" FontSize="20" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
                <TextBlock Text="Логін:" Margin="0,10,0,0" Foreground="#333333" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Margin="60,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="#FFFFFF"/>
                <TextBlock Text="Пароль:" Margin="0,10,0,0" Foreground="#333333" Grid.Row="4" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="4" Margin="60,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Background="#FFFFFF"/>
                <Button Content="Увійти" Grid.Row="6" Height="30" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" Background="#4CAF50" Foreground="Black"/>
            </Grid>
        </Border>
    </Grid>
</Window>
