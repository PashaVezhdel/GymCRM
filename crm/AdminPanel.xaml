<Window x:Class="crm.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crm"
        mc:Ignorable="d"
        Title="Панель адміністратора" Height="520" Width="700" Background="#F0F4F8" 
        ResizeMode="NoResize" WindowState="Normal" Icon="img/admin.ico"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F0F4F8"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F4F4F4"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F0F4F8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#222222"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="DataGridRow.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#F4F4F4" Duration="0:0:0.2" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="DataGridRow.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="White" Duration="0:0:0.2" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Керування акаунтами" FontSize="20" FontWeight="Bold" Foreground="#333"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
          Grid.Row="1" Height="200" Margin="0,0,0,10" SelectionMode="Single"
          SelectionChanged="UsersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логін" Binding="{Binding username}" Width="2*" />
                <DataGridTextColumn Header="Пароль" Binding="{Binding password}" Width="2*" />
                <DataGridTextColumn Header="Роль" Binding="{Binding role}" Width="1*" />
                <DataGridTextColumn Header="Дата створення" Binding="{Binding created_at, StringFormat='yyyy/MM/dd HH:mm:ss'}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Логін" FontWeight="Bold"/>
                <TextBox x:Name="UsernameTextBox" Width="180" Height="30" Padding="5" Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Пароль" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox" Width="180" Height="30" Padding="5" Background="White"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Роль" FontWeight="Bold"/>
                <ComboBox x:Name="RoleComboBox" Width="150" Height="30" Background="White">
                    <ComboBoxItem Content="ADMIN"/>
                    <ComboBoxItem Content="EMPLOYEE"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="CreateAccountButton" Content="Створити аккаунт" Margin="10" Click="CreateAccountButton_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button x:Name="SaveChangesButton" Content="Зберегти зміни" Margin="10" Click="SaveChangesButton_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button x:Name="DeleteAccountButton" Content="Видалити аккаунт" Margin="10" Click="DeleteAccountButton_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="MonitorDBButton" Content="Моніторинг БД" Margin="10" Click="MonitorDB_Button_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button x:Name="RebootButton" Content="Перезавантажити служби БД" Margin="10" Click="RebootButton_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button x:Name="AuthLogsButton" Content="Логи авторизації" Margin="10" Click="AuthLogsButton_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
